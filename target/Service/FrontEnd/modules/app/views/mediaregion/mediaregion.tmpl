<div class="row-fluid" ms-controller="mediaregion">
  <!--表格-->
  <div class="portlet box blue" >
    <div class="portlet-title">
      <div class="caption">
        <i class="icon-edit">
        </i>
        {{title}}
      </div>
      <div class="tools">
      </div>
    </div>
    <div class="portlet-body">
      <div class="clearfix">
        
        <div class="btn-group">
          <a class="btn green" ms-click="ShowAdd()">
            <i class="icon-plus">
            </i>新增
          </a>
        </div>
      </div>
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>
              序号
            </th>
            <th>
              名称
            </th>
            <th>
              区域
            </th>
            <th>
              管理
            </th>
          </tr>
        </thead>
        <tbody>
          <tr class="" ms-repeat-obj="dataList " style="max-height:600px;">
            <td style="max-width:200px;">
              {{$index+1}}
            </td>
            <td style="max-width:200px;">
              {{obj.media.name}}
            </td>
            <td style="max-width:200px;">
              {{obj.region.name}}
            </td>
            <td>
              <a class="btn mini blue" ms-click="ShowUpdate(obj)">
                修改
              </a>
              <a class="btn mini blue" ms-click="ShowDel(obj)">
                删除
              </a>
            </td>

          </tr>
        </tbody>
      </table>
    
      <div class="clearfix">
        <div class="btn-group">
          <a class="btn green" ms-click="PreviouPage()">
            <i class="icon-step-backward">
            </i>上一页
          </a>
          <a class="btn green" ms-click="PreviouPage()">
            {{currentPage}}/{{pageCount}}
          </a>
          <a class="btn green" ms-click="NextPage()">
            <i class="icon-step-forward">
            </i>下一页
          </a>
        </div>
      </div>
    </div>

  </div>
  <!--新增和修改-->
  <div id="Add_modal" class="modal modal-large hide fade" tabindex="-1" data-focus-on="input:first">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
      </button>
      <h3>
        {{isAdd=true?'新增图片':'修改图片'}}
      </h3>
    </div>
    <div class="modal-body">
      <div class="form">
        <form action="#" id="BookFrom"  class="form-horizontal">
          <div class="alert alert-error hide">
            <button class="close" data-dismiss="alert"></button>
            请按照规则填写以下信息
          </div>
          <div class="alert alert-success hide">
            <button class="close" data-dismiss="alert"></button>
            信息已通过验证，正在提交...
          </div>
          <div class="row-fluid">
            <div class="row-fluid">
              <div class="span6 ">
                <div class="control-group">
                  <label class="control-label  span3" for="Name">
                    资料名称:<span class="required">*</span>
                  </label>
                  <div class="controls  span9">
                    <select ms-each="">
                      <option></option>
                    </select>
                    <input type="text" name="Name" class="m-wrap span11" placeholder="资料名称" ms-duplex="CurrentObj.Name" />
                    <span class="help-block"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="row-fluid">
              <label for="Name">
                社区：{{Regionname}}
              </label>
              <table class="table table-striped table-hover table-bordered">
                <thead>
                  <tr>
                    <th style="width:102px">
                      序号
                    </th>
                    <th>
                      名称
                    </th>
                    <th style="width:200px">
                      选择
                    </th>
                    <th style="width:200px">
                      管理
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr ms-if="RegionList.length==0" style="max-height:600px;">
                    <td colspan="2">
                      无数据
                    </td>
                    <td>
                      <a ms-if="level!=1" href="javascript:;" class="btn blue" ms-click="SetPid(0,-1,0,0)">
                        <i class="fa fa-arrow-circle-o-left"></i>上一级
                      </a>
                    </td>
                    <td>
                    </td>
                  </tr>
                  <tr class="" ms-repeat-obj="RegionList " style="max-height:600px;">
                    <td style="max-width:200px;">
                      {{$index+1}}
                    </td>
                    <td style="max-width:200px;">
                      {{obj.name}}
                    </td>
                    <td>
                      <a ms-if="level==1" href="javascript:;" class="btn blue disabled" ms-click="SetPid(obj.name,-1,0,0)">
                        <i class="fa fa-arrow-circle-o-left"></i>上一级
                      </a>
                      <a ms-if="level!=1" href="javascript:;" class="btn blue" ms-click="SetPid(obj.name,-1,0,0)">
                        <i class="fa fa-arrow-circle-o-left"></i>上一级
                      </a>
                      <a ms-if="level==3" href="javascript:;" class="btn green disabled" ms-click="SetPid(obj.name,1,obj.id,obj.pid)">
                        <i class="fa fa-arrow-circle-o-right"></i>下一级
                      </a>
                      <a ms-if="level!=3" href="javascript:;" class="btn green" ms-click="SetPid(obj.name,1,obj.id,obj.pid)">
                        <i class="fa fa-arrow-circle-o-right"></i>下一级
                      </a>
                    </td>
                    <td>
                      <a class="btn mini blue" ms-click="SetRegion(obj.id,obj.name)">
                        选择
                      </a>
                    </td>

                  </tr>
                </tbody>
              </table>

              <div class="clearfix">
                <div class="btn-group">
                  <a class="btn green" ms-click="PreviouPage()">
                    <i class="icon-step-backward">
                    </i>上一页
                  </a>
                  <a class="btn green" ms-click="PreviouPage()">
                    {{RegioncurrentPage}}/{{RegionpageCount}}
                  </a>
                  <a class="btn green" ms-click="NextPage()">
                    <i class="icon-step-forward">
                    </i>下一页
                  </a>
                </div>
              </div>

            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" data-dismiss="modal" class="btn">
        关闭
      </button>
      <button type="button" class="btn red" ms-click="Save()">
        保存
      </button>
    </div>
  </div>

  <!--删除组织机构窗口-->
  <div id="Delete_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="mrdirsDialogLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
      <h3 id="deleteDialogLabel">删除</h3>
    </div>
    <div class="modal-body">
      <div class="row-fluid">
        <p>警告：你确定要删除吗</p>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
      <button class="btn btn-primary red" ms-click="Delete()">确定</button>
    </div>
  </div>


  <!--文件上传窗口-->
  <div id="uploadDialog" class="modal modal-large hide fade" tabindex="-1" role="dialog" aria-labelledby="mrdirsDialogLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
      <h3 id="deleteDialogLabel">上传文件(文件大小不要超过5M)</h3>
    </div>
    <div class="modal-body">
      <div class="row-fluid">
        <input id="file_upload" name="file_upload" type="file" multiple="true"/>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
      <button class="btn btn-primary red" ms-click="ImgUpload()">上传</button>
    </div>
  </div>
</div>
