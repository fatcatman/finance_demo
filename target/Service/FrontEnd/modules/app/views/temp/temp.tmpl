<div class="row-fluid" ms-controller="temp">
  <!--表格-->
  <div class="portlet box blue" >
    <div class="portlet-title">
      <div class="caption">
        <i class="icon-edit">
        </i>
        {{title}}
      </div>
      <div class="tools">
      </div>
    </div>
    <div class="portlet-body">
      <div class="clearfix">
        <div class="btn-group">
          <a ms-if="Type==0" class="btn red" href="javascript:history.go(-1)">
            <i class="icon-step-backward">
            </i>返回
          </a>
          <a ms-if="Type==1" class="btn red" href="javascript:history.go(-1)">

            <i class="icon-step-backward">
            </i>返回
          </a>
        </div>
        <div class="btn-group">
          <a ms-if="Type==0" class="btn green" ms-click="ShowAdd()">
            <i class="icon-plus">
            </i>新增模板
          </a>
        </div>
      </div>
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th style="width:50px">
              序号
            </th>
            <th>
              名称
            </th>
            <th>
              所属事项
            </th>
            <th>
              热度
            </th>
            <th style="width:150px">
              创建时间
            </th>
            <th>
              图片
            </th>
            <th>
              管理
            </th>
          </tr>
        </thead>
        <tbody>
          <tr class="" ms-repeat-obj="dataList " style="max-height:600px;">
            <td >
              {{$index+1}}
            </td>
            <td style="max-width:200px;">
              {{obj.Name}}
            </td>
            <td style="max-width:200px;">
              {{obj.ApprovalItem.Approval.Name}}
            </td>
            <td style="max-width:200px;">
              {{obj.SearchNum}}
            </td>
            <td style="max-width:200px;">
              {{obj.CreateTime  | date("yyyy-MM-dd:HH:mm:ss")}}
            </td>
            <td style="max-width:200px;">
              <span ms-visible="obj.Path!=null">
                <a ms-href="/Service{{obj.Path}}" data-lightbox="1">
                  <img style=" height:40px;" ms-src="/Service{{obj.Path}}"/>
                </a>
              </span>
            </td>
            <td>
              <a class="btn mini yellow" ms-click="Picinit(obj)">
                上传图片
              </a>
              <a class="btn mini blue" ms-click="ShowUpdate(obj)">
                修改
              </a>
              <a class="btn mini red" ms-click="ShowDel(obj)">
                删除
              </a>
              
            </td>

          </tr>
        </tbody>
      </table>
    
      <div class="clearfix">
        <div class="btn-group">
          <a class="btn green" ms-click="PreviouPage()">
            <i class="icon-step-backward">
            </i>上一页
          </a>
          <a class="btn green" ms-click="PreviouPage()">
            {{currentPage}}/{{pageCount}}
          </a>
          <a class="btn green" ms-click="NextPage()">
            <i class="icon-step-forward">
            </i>下一页
          </a>
        </div>
      </div>
    </div>

  </div>
  <!--新增和修改-->
  <div id="Add_modal" class="modal modal-large hide fade" tabindex="-1" data-focus-on="input:first">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
      </button>
      <h3>
        {{isAdd==true?'新增模板':'修改模板'}}
      </h3>
    </div>
    <div class="modal-body">
      <div class="form">
        <form action="#" id="BookFrom"  class="form-horizontal">
          <div class="alert alert-error hide">
            <button class="close" data-dismiss="alert"></button>
            请按照规则填写以下信息
          </div>
          <div class="alert alert-success hide">
            <button class="close" data-dismiss="alert"></button>
            信息已通过验证，正在提交...
          </div>
          <div class="row-fluid">
            <div class="row-fluid">
              <div class="span6 ">
                <div class="control-group">
                  <label class="control-label  span3" for="Name">
                    模板名称:<span class="required">*</span>
                  </label>
                  <div class="controls  span9">
                    <input type="text" name="Account" class="m-wrap span11" placeholder="模板名称" ms-duplex="CurrentObj.Name" />
                    <span class="help-block"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" data-dismiss="modal" class="btn">
        关闭
      </button>
      <button type="button" class="btn red" ms-click="Save()">
        保存
      </button>
    </div>
  </div>

  <!--删除组织机构窗口-->
  <div id="Delete_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="mrdirsDialogLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
      <h3 id="deleteDialogLabel">删除</h3>
    </div>
    <div class="modal-body">
      <div class="row-fluid">
        <p>警告：你确定要删除吗</p>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
      <button class="btn btn-primary red" ms-click="Delete()">确定</button>
    </div>
  </div>


 <!--文件上传窗口-->
  <div id="uploadDialog" class="modal modal-large hide fade" tabindex="-1" role="dialog" aria-labelledby="mrdirsDialogLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
      <h3 id="deleteDialogLabel">上传文件(文件大小不要超过5M)</h3>
    </div>
    <div class="modal-body">
      <div class="row-fluid">
        <input id="file_upload" name="file_upload" type="file" multiple="true"/>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
      <button class="btn btn-primary red" ms-click="ImgUpload()">上传</button>
    </div>
  </div>
</div>
